<view class="detail-wrap">
    <view class="detail-top">
        <picker class="detail-picker" mode="date" value="{{date}}" bindchange="changeDate">
            {{date}}
            <image class="detail-trian" src="/images/inverted-trian.svg" />
        </picker>
        <view class="detail-use-time">
            <view>
                <view>预计耗时</view>
                <view>8.5</view>
            </view>
            <view>
                <view>实际耗时</view>
                <view>382.5</view>
            </view>
        </view>
    </view>
    <block wx:if="{{false}}">
        <view class="detail-none">~暂无数据~</view>
    </block>
    <block wx:else>
        <view class="detail-content" wx:for="{{detailLists}}" wx:key="*this">
            <view class="detail-date">
                <view>{{item.date}}</view>
                <view>实际耗时：{{item.hour}}</view>
            </view>
            <view class="detail-list" wx:for="{{item.lists}}" wx:key="*this" wx:for-item="itemList">
                <image class="detail-image" src="/images/make.svg" />
                <view class="detail-list-item">
                    <view class="detail-title">{{itemList.taskName}}</view>
                    <view>+{{itemList.actualHours}}</view>
                </view>
            </view>
        </view>
    </block>
</view>