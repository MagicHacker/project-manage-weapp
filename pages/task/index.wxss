.task-wrap {
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding-top: 30rpx;
  position: relative;
}
.task-list {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.task-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.task-order {
  width: 80rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #979797;
  font-size: 32rpx;
}
.task-title {
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #000;
  font-size: 32rpx;
}
.task-right {
  width: 40rpx;
  height: 40rpx;
}
.task-line {
  width: 100%;
  height: 1rpx;
  border-top: 1rpx solid #f4f4f4;
}
.task-add {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
}
.task-none {
  width: 260rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: rgb(133, 133, 133);
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -130rpx;
  margin-top: -40rpx;
}
