.add-task-wrap {
  width: 100%;
  height: 100%;
}
.task-type-first,
.task-type-second {
  width: 100%;
  display: flex;
  margin: 30rpx auto;
  align-items: center;
  justify-content: space-around;
}
.task-type-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.task-type-item {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f6f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.task-type-image {
  width: 60rpx;
  height: 60rpx;
}
.task-detail-list {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  color: #979797;
}
.task-detail-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  font-size: 32rpx;
}
.task-detail-item > input {
  color: #000;
}
.task-start-time,
.task-end-time,
.task-type,
.task-hour,
.task-name {
  height: 44rpx;
  line-height: 44rpx;
  margin-left: 40rpx;
  color: #000;
  margin-left: 40rpx;
}
.task-description {
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 40rpx;
  color: #000;
}
.task-save {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fddb43;
  border-radius: 24rpx;
  text-align: center;
  margin: 30rpx auto;
}
