.personal-wrap {
  width: 100%;
  height: 100%;
  background-color: #f6f5f5;
}
.personal-top {
  width: 100%;
  height: 200rpx;
  background-color: #fddb43;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.personal-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-btn {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 2rpx;
  background-color: #f6f5f5;
}
.avatar-btn:after {
  border: none;
}
.avatar-image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.personal-message {
  width: 100%;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  background-color: #fff;
}
.personal-list {
  width: 100%;
  display: flex;
  align-items: center;
}
.personal-list-content {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 30rpx;
}
.border-bottom {
  border-bottom: 2rpx solid rgb(235, 235, 235);
}
.personal-image {
  width: 60rpx;
  height: 60rpx;
}
.personal-input {
  text-align: right;
}
